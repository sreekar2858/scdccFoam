FoamFile
{
    version     2.0;
    format      binary;
    class       volScalarField;
    arch        "LSB;label=32;scalar=64";
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];


internalField   uniform 990;

boundaryField
{
    Top
    {
        type            fixedValue;
        value           nonuniform 0;
    }
    Bottom
    {
        type            zeroGradient;
    }
    htopWall
    {
        type            zeroGradient;
    }
    condWall
    {
        type            fixedValue;
        value           nonuniform 0;
    }
    convWall
    {
        type            robinTemperature;
        h               uniform 750;
        Tinf            uniform 283;
        value           nonuniform 0;
    }
    LSymm
    {
        type            symmetryPlane;
    }
    frontAndBack
    {
        type            empty;
    }
    defaultFaces
    {
        type            empty;
    }
    procBoundary0to1
    {
        type            processor;
        value           uniform 990;
    }
    procBoundary0to2
    {
        type            processor;
        value           uniform 990;
    }
}


